package se.ludvig.hourly.GUI;

import se.ludvig.hourly.R;
import android.app.Activity;
import android.view.LayoutInflater;
import android.view.View;
import android.view.ViewGroup;
import android.widget.ArrayAdapter;
import android.widget.TextView;

public class EmployerList extends ArrayAdapter<String>  {


	private final Activity context;
	private final String[] empNames;
	
	public EmployerList(Activity context, ArrayList<Employer>)
	{
		super(context, R.layout.employer_listrow, web);
		this.context = context;
		this.empNames = web;
		
	}
		
	@Override
	public View getView(int position, View view, ViewGroup parent) {
	
		LayoutInflater inflater = context.getLayoutInflater();
	
		View rowView= inflater.inflate(R.layout.employer_listrow, null, true);
	
		TextView txtEmpName = (TextView) rowView.findViewById(R.id.txtEmployerName);
	
		txtTitle.setText(empNames[position]);
	
		return rowView;
	}
}
